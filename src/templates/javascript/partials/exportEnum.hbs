{{#if description}}
/**
 * {{{description}}}
 */
{{/if}}
export let {{{name}}};
(function ({{{name}}}) {

    {{#each enum}}
    {{{../name}}}.{{{name}}} = {{{value}}};
    {{/each}}

    {{{name}}}.schema = {{>validation}};

    {{{name}}}.validate = async function(value) {
        return {{{name}}}.schema.validate(value, { strict: true });
    };

    {{{name}}}.validateSync = function(value) {
        return {{{name}}}.schema.validateSync(value, { strict: true });
    };

})({{{name}}} || ({{{name}}} = {}));
