{{#if description}}
/**
 * {{{description}}}
 */
{{/if}}
export let {{{name}}};
(function ({{{name}}}) {

    {{#each enums}}
    {{#if description}}
    /**
     * {{{description}}}
     */
    {{/if}}
    {{{../name}}}.{{{name}}} = {
        {{#each enum}}
        {{{name}}}: {{{value}}}{{>comma}}
        {{/each}}
    };

    {{/each}}
    {{{name}}}.schema = {{>validation parent=name}};

    {{{name}}}.validate = async function(value) {
        return {{{name}}}.schema.validate(value, { strict: true });
    };

    {{{name}}}.validateSync = function(value) {
        return {{{name}}}.schema.validateSync(value, { strict: true });
    };

})({{{name}}} || ({{{name}}} = {}));
