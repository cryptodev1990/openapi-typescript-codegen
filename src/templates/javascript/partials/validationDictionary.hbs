{{~#if link~}}
yup.lazy(value => {
    return yup.object().shape(
        Object.keys(value).reduce((object, key) => ({
            ...object,
            [key]: {{>validation link}}
        }), {})
    ).noUnknown();
})
{{~else~}}
yup.lazy(value => {
    return yup.object().shape(
        Object.keys(value).reduce((key, item) => ({
            ...object,
            [key]: {{{base}}}.schema
        }), {})
    ).noUnknown();
})
{{~/if~}}
