{{~#>validationBasics~}}
{{~#equals parent name~}}
yup.mixed<{{{name}}}>().oneOf([
    {{#each enum}}
    {{{../parent}}}.{{{name}}}{{>comma}}
    {{/each}}
])
{{~else~}}
yup.mixed<{{#>isNullable}}{{{type}}}{{/isNullable}}>().oneOf([
    {{#each enum}}
    {{{value}}}{{>comma}}
    {{/each}}
])
{{~/equals~}}
{{~/validationBasics~}}
