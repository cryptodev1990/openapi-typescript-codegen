{{~#equals parent name~}}
yup.mixed<{{{name}}}>().oneOf([
    {{#each enum}}
    {{{../parent}}}.{{{name}}}{{>comma}}
    {{/each}}
]){{>validationBasics}}
{{~else~}}
yup.mixed<{{{type}}}{{>isNullable}}>().oneOf([
    {{#each enum}}
    {{{value}}}{{>comma}}
    {{/each}}
]){{>validationBasics}}
{{~/equals~}}

