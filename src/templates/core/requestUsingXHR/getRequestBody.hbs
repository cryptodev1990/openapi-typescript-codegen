function getRequestBody(options: ApiRequestOptions): any {
    if (options.formData) {
        return getFormData(options.formData);
    }

    if (options.body) {
        if (options.body instanceof Blob) {
            return options.body;
        } else if (typeof options.body === 'string') {
            return options.body;
        } else {
            return JSON.stringify(options.body);
        }
    }

    return undefined;
}
