{
    "compileOnSave": false,

    "compilerOptions": {
        "outDir": "./dist",
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "types": ["node", "jest"],
        "typeRoots": ["node_modules/@types"],
        "declaration": true,
        "declarationMap": false,
        "sourceMap": false,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "importHelpers": false,
        "removeComments": false,
        "forceConsistentCasingInFileNames": true
    },

    "include": [
        "./src/index.ts"
    ],

    "exclude": [
        "node_modules"
    ]
}

